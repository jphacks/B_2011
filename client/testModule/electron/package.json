{
  "name": "Vega",
  "version": "1.0.0",
  "description": "Innovating the experience of online exams",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-win": "electron-forge make --platform=win32",
    "make-linux": "electron-forge make --platform linux --targets deb"
  },
  "keywords": [],
  "author": "Vega team",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "electron-packager": "^15.1.0",
    "electron-winstaller": "^4.0.1"
  },
  "dependencies": {
    "active-win": "^6.2.0",
    "capture-video-frame": "^1.0.0",
    "clipboardy": "^2.3.0",
    "data-uri-to-buffer": "^3.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "face-api.js": "^0.22.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "resources/vega"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Vega"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "build": {
    "appId": "com.electron.vega",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src",
      "resources",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "icon": "resources/vega.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "resources/vega.ico",
      "target": "squirrel"
    }
  }
}
